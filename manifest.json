{
  "name": "Debug Button",
  "version": "0.1",
  "description": "Adds a debug button to help debug internal web apps",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": "icon-48.png",
    "default_title": "Send an error!"
  },
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content_script.js"
      ],
      "matches": [
        "http://localhost:6701/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources" : ["/js/phoenix.js", "/libs/console-history.js"],

  "icons": {
    "48": "icon-48.png"
  },
  "manifest_version": 2
}
